<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.radhika.omnia.AddSubroutine"
    android:id="@+id/idView2"
    android:background="@color/light_green">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:onClick = "backButton"
        android:id="@+id/back_button_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ff000000"
        android:textColor="#ffffffff"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_subroutine"
        android:id="@+id/create_button"
        android:layout_marginTop="83dp"
        android:background="#ff000000"
        android:textSize="20sp"
        android:clickable="true"
        android:minHeight="60dp"
        android:minWidth="250dp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_below="@+id/back_button_1"
        android:layout_centerHorizontal="true"
        android:onClick = "onButtonClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_subroutine"
        android:id="@+id/load_button"
        android:background="#ff000000"
        android:textSize="20sp"
        android:height="40dp"
        android:minHeight="60dp"
        android:minWidth="250dp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_below="@+id/create_button"
        android:layout_alignStart="@+id/create_button"
        android:layout_marginTop="98dp"
        android:onClick ="onButtonClick"/>
</RelativeLayout>