<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.radhika.omnia.ConfirmSave"
    android:id="@+id/relLayout"
    android:background="@color/light_green">

    <TextView android:text="Your subroutine was successfully saved!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveWorked"
        android:textSize="30sp"
        android:layout_marginTop="65dp"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:paddingEnd="35sp"
        android:paddingStart="35sp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/backHome"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:background="#ff000000"
        android:minHeight="60sp"
        android:minWidth="200sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="131dp" />

</RelativeLayout>